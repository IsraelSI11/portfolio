---
import DownloadIcon from "./icons/DownloadIcon.astro";
import EyeIcon from "./icons/EyeIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import Mail from "./Mail.astro";
import SocialLink from "./SocialLink.astro";

import * as m from "../paraglide/messages";
---

<div class="flex flex-row flex-wrap justify-center md:justify-normal gap-2">
    <SocialLink href="https://github.com/IsraelSi11">
        <GithubIcon />
        <span>GitHub</span>
    </SocialLink>
    <SocialLink
        href="https://www.linkedin.com/in/israel-solís-iglesias-43ab6225a/"
    >
        <LinkedinIcon />
        <span>Linkedin</span>
    </SocialLink>
    <SocialLink
        href="/Israel_Solís_Iglesias_CV.pdf"
        download="Israel_Solís_Iglesias_CV"
    >
        <DownloadIcon />
        <span>{m.downloadCv()}</span>
    </SocialLink>
    <SocialLink
        href="/Israel_Solís_Iglesias_CV.pdf"
    >
        <EyeIcon />
        <span>{m.viewCv()}</span>
    </SocialLink>
    <div class="col-span-2">
        <Mail/>
    </div>
    
</div>

