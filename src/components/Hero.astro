---
import * as m from "../paraglide/messages";
import SocialLinksGroup from "./SocialLinksGroup.astro";
---

<section
    class="container py-16 md:py-36 scroll-m-10 w-full mx-auto lg:max-w-4xl md:max-w-2xl"
>
    <div class="flex flex-col md:flex-row align-middle gap-28">
        <div class="flex flex-col justify-center gap-6 w-full md:w-1/2">
            
            <div class="flex items-center gap-5">
                <h1 class="text-5xl md:text-7xl font-bold text-orange-highlight">
                    Israel Sol√≠s
                </h1>
                <img
                src="/personal-photo-optimized.jpg"
                alt="Hero"
                class="block md:hidden rounded-full size-20"
            />
            </div>
            <h2 class="text-3xl text-gray-desc">
                {m.softwareEngineerTitle()}
            </h2>
            <p class="text-lg">
                {m.softwareEngineerDescription()}
            </p>
            <SocialLinksGroup />
        </div>
        <img
            src="/personal-photo-optimized.jpg"
            alt="Hero"
            class="hidden md:block rounded-full size-2/6"
        />
    </div>
</section>
