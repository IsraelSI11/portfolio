---
import * as m from "../paraglide/messages";
import { skills } from "../utils/skills";
---

<section class="mb-48">
    <h2 class="font-semibold text-5xl">{m.skills()}</h2>
    <div class="flex flex-row mt-6 gap-12">
        {
            Object.keys(skills).map((skillType) => (
                <div class="flex flex-col w-1/3 p-4 [background:linear-gradient(45deg,#172033,theme(colors.slate.900)_50%,#172033)_padding-box,conic-gradient(from_var(--border-angle),theme(colors.slate.600/.48)_80%,_#FFC300_86%,_#FFC300_90%,_#FFC300_94%,_theme(colors.slate.600/.48))_border-box] rounded-2xl border border-transparent animate-border">
                    <h3 class="font-semibold text-2xl">{skillType}</h3>
                    <ul class="list-none">
                        {skills[skillType].map((skill) => (
                            <li class="flex items-center mt-2">
                                <skill.icon class="w-6 h-6 mr-2" />
                                {skill.name}
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</section>

<style>

    @property --border-angle {
        inherits: false;
        initial-value: 0deg;
        syntax: "<angle>";
    }
</style>
