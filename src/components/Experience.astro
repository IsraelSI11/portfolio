---
import * as m from "../paraglide/messages";
---

<section
    id={m.experienceNavLabel()}
    class="container w-full mx-auto lg:max-w-4xl md:max-w-2xl mt-12"
>
    <h2 class="font-semibold text-2xl md:text-3xl">{m.workExperience()}</h2>
    <div class="flex flex-row flex-wrap items-center text-xl gap-6 mt-8">
        <img
            src="/portfolio/experience2.png"
            alt="Piedrafita systems logo"
            class="size-14 bg-white rounded-lg"
        />
        <h3 class="text-xl md:text-2xl font-semibold">
            {m.workExperiencePiedrafita()}
        </h3>
        <span class="text-xl text-gray-desc"
            >{m.workExperiencePiedrafitaDuration()}</span
        >
    </div>
    <p class="mt-4 md:max-w-2xl">{m.workExperiencePiedrafitaDescription()}</p>
    <div class="flex flex-row flex-wrap items-center text-xl gap-6 mt-8">
        <img
            src="/portfolio/experience1.png"
            alt="NTT DATA Logo"
            class="size-14 bg-white rounded-lg"
        />
        <h3 class="text-xl md:text-2xl font-semibold">
            {m.workExperienceIntern()}
        </h3>
        <span class="text-xl text-gray-desc"
            >{m.workExperienceInternDuration()}</span
        >
    </div>
    <p class="mt-4 md:max-w-2xl">{m.workExperienceInternDescription()}</p>
</section>
