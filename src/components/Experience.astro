---
import * as m from "../paraglide/messages";
---

<section class="container scroll-m-10 w-full mx-auto lg:max-w-4xl md:max-w-2xl mt-12">
    <h2 class="font-semibold text-2xl md:text-3xl">{m.workExperience()}</h2>
    <div class="flex flex-row flex-wrap items-center text-xl gap-6 mt-2">
        <h3 class="text-xl md:text-2xl font-semibold">
            {m.workExperienceIntern()}
        </h3>
        <span class="text-xl text-gray-desc">{m.workExperienceInternDuration()}</span>
    </div>
    <p class="mt-4">{m.workExperienceInternDescription()}</p>
</section>
